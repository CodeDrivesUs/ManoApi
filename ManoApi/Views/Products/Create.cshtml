@model ManoApi.Models.Product

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutStore.cshtml";
}

<div class="row">
    <div class="col-lg-2">

    </div>
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">Create Product</div>
            <div class="card-body card-block">
                <form method="post"  enctype="multipart/form-data" class="">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon">Category Name</div>
                            @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control" })
                            <div class="input-group-addon"><i class="fa fa-user"></i></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon">SubCategory Name</div>
                            @Html.DropDownList("SubCategoryId", null, htmlAttributes: new { @class = "form-control" })
                            <div class="input-group-addon"><i class="fa fa-envelope"></i></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon">Brand Name</div>
                            @Html.DropDownList("BrandId", null, htmlAttributes: new { @class = "form-control" })
                            <div class="input-group-addon"><i class="fa fa-envelope"></i></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon">Product Name</div>
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            <div class="input-group-addon"><i class="fa fa-envelope"></i></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon">Description</div>
                        
                            <div class="col-12 col-md-9"><textarea name="Description" id="Description" rows="4" placeholder="Description..." class="form-control"></textarea></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon">Basic Cost</div>
                            @Html.EditorFor(model => model.UnitCost, new { htmlAttributes = new { @class = "form-control" } })
                           
                           
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon">Image</div>
                            <input type="file" name="upload" id="upload" required />
                        </div>
                    </div>
                    <div class="form-actions form-group">
                        <button type="submit" class="btn btn-primary btn-sm">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-2">

    </div>

</div>
