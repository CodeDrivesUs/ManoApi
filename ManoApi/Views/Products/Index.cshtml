@model IEnumerable<ManoApi.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutStore.cshtml";
}

<div class="breadcrumbs">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Products</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a href="#">Products</a></li>
                            <li class="active">List All</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="content">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title text-center">List Of All Products</strong>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>

                                    <th>
                                        @Html.DisplayNameFor(model => model.Brands.Name)
                                    </th>
                                   
                                    <th>
                                        @Html.DisplayNameFor(model => model.SubCategory.SubCatName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Description)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.UnitCost)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Status)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Image)
                                    </th>

                                    <th></th>
                                </tr>
                            </thead>
                            @foreach (var item in Model)
                            {
                                <tbody>
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Brands.Name)
                                        </td>
                                       
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SubCategory.SubCatName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Description)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UnitCost)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Status)
                                        </td>
                                        <td>
                                            @if (item.Image != null)
                                            {
                                                var base64 = Convert.ToBase64String(item.Image);
                                                var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                                                <img src="@imgsrc" height="110" width="100" class="img-responsive">
                                            }
                                        </td>

                                        <td style="color:white;">
                                            <p class="btn btn-outline-secondary text-white"> @Html.ActionLink("Edit", "Edit", new { id = item.CategoryId }) </p>
                                            <p class="btn btn-outline-success">  @Html.ActionLink("Details", "Details", new { id = item.CategoryId })</p>
                                            <p class="btn btn-danger">  @Html.ActionLink("Delete", "Delete", new { id = item.CategoryId })</p>
                                        </td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div><!-- .animated -->
</div><!-- .content -->
